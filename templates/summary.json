{
  "type": "bubble",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                  {
                    "type": "text",
                    "text": "${TITLE}",
                    "weight": "bold",
                    "size": "sm",
                    "color": "#555555",
                    "align": "start",
                    "margin": "none"
                  }
                ],
                "height": "18px",
                "justifyContent": "flex-end",
                "alignItems": "center",
                "paddingBottom": "0px"
              },
              {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                  {
                    "type": "text",
                    "text": "${BALANCE_VALUE}",
                    "size": "xxl",
                    "color": "#555555",
                    "weight": "bold",
                    "align": "start",
                    "wrap": false,
                    "adjustMode": "shrink-to-fit",
                    "maxLines": 1
                  }
                ],
                "height": "18px",
                "justifyContent": "flex-start",
                "alignItems": "center",
                "margin": "none",
                "spacing": "none",
                "paddingTop": "0px"
              }
            ],
            "flex": 1,
            "justifyContent": "space-between",
            "spacing": "none",
            "height": "36px",
            "paddingTop": "0px",
            "paddingBottom": "0px"
          },
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                  {
                    "type": "text",
                    "text": "收",
                    "weight": "bold",
                    "size": "sm",
                    "color": "#555555",
                    "flex": 0,
                    "margin": "xl",
                    "align": "start"
                  },
                  {
                    "type": "text",
                    "text": "${INCOME_VALUE}",
                    "size": "md",
                    "color": "#555555",
                    "weight": "bold",
                    "align": "end",
                    "wrap": false,
                    "adjustMode": "shrink-to-fit",
                    "flex": 1,
                    "maxLines": 1
                  }
                ],
                "alignItems": "center",
                "justifyContent": "space-between",
                "spacing": "sm",
                "width": "100%",
                "flex": 1,
                "paddingStart": "20px",
                "height": "18px",
                "margin": "none"
              },
              {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                  {
                    "type": "text",
                    "text": "支",
                    "weight": "bold",
                    "size": "sm",
                    "color": "#555555",
                    "flex": 0,
                    "margin": "xl",
                    "align": "start"
                  },
                  {
                    "type": "text",
                    "text": "${EXPENSE_VALUE}",
                    "size": "md",
                    "color": "#555555",
                    "weight": "bold",
                    "align": "end",
                    "wrap": false,
                    "adjustMode": "shrink-to-fit",
                    "flex": 1,
                    "maxLines": 1
                  }
                ],
                "margin": "none",
                "alignItems": "center",
                "justifyContent": "space-between",
                "spacing": "sm",
                "width": "100%",
                "flex": 1,
                "paddingStart": "20px",
                "height": "18px"
              }
            ],
            "flex": 2,
            "justifyContent": "space-between",
            "spacing": "none",
            "paddingStart": "12px",
            "height": "36px",
            "paddingTop": "0px",
            "paddingBottom": "0px"
          }
        ],
        "paddingBottom": "12px",
        "alignItems": "flex-start",
        "height": "48px"
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "separator",
            "color": "#DDDDDD"
          }
        ],
        "paddingBottom": "12px"
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "text",
            "text": "${ANALYSIS_TITLE}",
            "weight": "bold",
            "size": "sm",
            "color": "#555555",
            "margin": "none"
          }
        ],
        "paddingBottom": "6px"
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [],
        "spacing": "xs"
      }
    ],
    "paddingAll": "24px",
    "backgroundColor": "#FFFFFF",
    "spacing": "none"
  },
  "styles": {
    "body": {
      "backgroundColor": "#FFFFFF"
    }
  }
}
